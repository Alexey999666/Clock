<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clock.NewPage4"
             Title="Таймер">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

            
            <Label x:Name="TimeLabel" 
                   Text="00:00:00" 
                   FontSize="48" 
                   HorizontalOptions="Center" 
                   TextColor="Black"/>

            
            <Frame BackgroundColor="#f0f0f0" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Установите время:" FontSize="16"/>

                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10">
                       
                        <Label Text="Часы:" Grid.Row="0" Grid.Column="0"/>
                        <Entry x:Name="HoursEntry" 
                               Text="0" 
                               Keyboard="Numeric" 
                               Grid.Row="1" Grid.Column="0"/>

                        <Label Text="Минуты:" Grid.Row="0" Grid.Column="1"/>
                        <Entry x:Name="MinutesEntry" 
                               Text="1" 
                               Keyboard="Numeric" 
                               Grid.Row="1" Grid.Column="1"/>

                      
                        <Label Text="Секунды:" Grid.Row="0" Grid.Column="2"/>
                        <Entry x:Name="SecondsEntry" 
                               Text="0" 
                               Keyboard="Numeric" 
                               Grid.Row="1" Grid.Column="2"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

           
            <Button x:Name="StartButton" 
                    Text="▶" 
                    Clicked="OnStartClicked" 
                    BackgroundColor="AliceBlue" 
                    TextColor="Red"
                    FontSize="40"
                    WidthRequest="80"
                    HeightRequest="80"
                    CornerRadius="40"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="20,10,14,15"/>

            
            <Grid x:Name="ControlButtonsGrid"
                  ColumnDefinitions="*,*" 
                  ColumnSpacing="10"
                  IsVisible="False"
                  HorizontalOptions="Center">

                <Button x:Name="PauseButton" 
                        Text="❚❚" 
                        Clicked="OnPauseClicked" 
                        BackgroundColor="AliceBlue" 
                        TextColor="Red"
                        FontSize="40"
                        WidthRequest="80"
                        HeightRequest="80"
                        CornerRadius="40"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Grid.Column="0"/>

                <Button x:Name="ResetButton" 
                        Text="◼" 
                        Clicked="OnResetClicked" 
                        BackgroundColor="AliceBlue" 
                        TextColor="Red"
                        FontSize="50"
                        WidthRequest="80"
                        HeightRequest="80"
                        CornerRadius="40"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="1,1,1,1"
                        Grid.Column="1"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
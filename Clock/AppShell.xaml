<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Clock.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Clock"
    Shell.FlyoutBehavior="Disabled"
    Title="Clock">

    <TabBar>
        <Tab Title="Program" Route="Program">

            <ShellContent Title="⏰" ContentTemplate="{DataTemplate local:NewPage1}"  Route="Alarm" />



            <ShellContent Title="🕰" ContentTemplate="{DataTemplate local:NewPage2}" Route="Watch" />
            <ShellContent Title="⏱" ContentTemplate="{DataTemplate local:NewPage3}"  Route="Stopwatch" />
            <ShellContent Title="⏳" ContentTemplate="{DataTemplate local:NewPage4}"  Route="Timer" />
        </Tab>
    </TabBar>

</Shell>
